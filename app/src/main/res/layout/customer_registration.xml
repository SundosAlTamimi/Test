<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layer1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/Customer_Registration"
        android:textColor="@color/text_color"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layer3"
        android:orientation="vertical"
        android:padding="20dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="196dp"
                    android:layout_height="wrap_content"
                    android:text="@string/member_ship_group"
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinner_member"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="@string/birthday"
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/layer1"
                    android:textColor="@color/text_color"
                    android:ems="10"
                    android:paddingHorizontal="5dp"
                    android:inputType="date" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_name"
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/customer_name"
                    android:layout_width="251dp"
                    android:layout_height="wrap_content"
                    android:background="@color/layer1"
                    android:ems="10"
                    android:paddingHorizontal="5dp"
                    android:inputType="textPersonName"
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="@string/Anniversary"
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/anniversary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/layer1"
                    android:ems="10"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/text_color"
                    android:inputType="date" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_code"
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/customer_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/layer1"
                    android:ems="10"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/text_color"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="@string/occupation"
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/occupation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/layer1"
                    android:ems="10"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/text_color"
                    android:inputType="textPersonName" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/member_ship_card"
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/member_ship_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/layer1"
                    android:ems="10"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/text_color"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="Email"
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/layer1"
                    android:ems="10"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/text_color"
                    android:inputType="textPersonName" />
            </TableRow>
        </TableLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:text="@string/coender"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/radio_mal_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_mal"
                    android:layout_width="107dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/Male"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/radio_female"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Female"
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="@string/Remark"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/remark3"
                android:layout_width="336dp"
                android:layout_height="37dp"
                android:background="@color/layer1"
                android:ems="10"
                android:paddingHorizontal="8dp"
                android:paddingLeft="2dp"
                android:gravity="top"
                android:inputType="textPersonName"
                android:textColor="@color/text_color"
                android:textSize="18sp" />
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/streetNo"
                        android:layout_width="194dp"
                        android:layout_height="wrap_content"
                        android:text="@string/street_no_name"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/streetNOEdit"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:background="@color/layer1"
                        android:ems="10"
                        android:paddingHorizontal="5dp"
                        android:inputType="textPersonName"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/city"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/layer1"
                        android:ems="10"
                        android:paddingHorizontal="5dp"
                        android:inputType="textPersonName"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/phone_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/layer1"
                        android:ems="10"
                        android:paddingHorizontal="5dp"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/mobile_number3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/layer1"
                        android:ems="10"
                        android:paddingHorizontal="5dp"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="128dp"
                        android:layout_height="wrap_content"
                        android:text="@string/Name_show"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/name_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/layer1"
                        android:ems="10"
                        android:paddingHorizontal="5dp"
                        android:inputType="textPersonName"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="3dp"
                android:padding="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_point"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp">

                    <EditText
                        android:id="@+id/total_point"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/layer1"
                        android:ems="10"
                        android:paddingHorizontal="5dp"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Redeemed_point"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp">

                    <EditText
                        android:id="@+id/total_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/layer1"
                        android:ems="10"
                        android:paddingHorizontal="5dp"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        android:text="@string/remaining_points"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp">

                    <EditText
                        android:id="@+id/total_rem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/layer1"
                        android:ems="10"
                        android:paddingHorizontal="5dp"
                        android:inputType="numberDecimal"
                        android:paddingBottom="10dp"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/newButton3"
                android:layout_width="115dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@color/dark_blue"
                android:text="@string/add"
                android:textColor="@color/layer1"
                android:textStyle="bold" />

            <Button
                android:id="@+id/saveButton3"
                android:layout_width="115dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimaryLight"
                android:text="@string/save"
                android:textColor="@color/layer1"
                android:textStyle="bold" />

            <Button
                android:id="@+id/deleteButton3"
                android:layout_width="115dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@color/exit"
                android:text="@string/exit"
                android:textColor="@color/layer1"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>